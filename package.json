{
	"name": "@appnest/web-config",
	"version": "0.1.26",
	"description": "A simple configuration to quickly get started with new web applications.",
	"author": "Appnest",
	"main": "index.cjs.js",
	"module": "index.esm.js",
	"bugs": {
		"url": "https://github.com/andreasbm/web-config/issues"
	},
	"homepage": "https://github.com/andreasbm/web-config#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andreasbm/web-config.git"
	},
	"keywords": [
		"configuration",
		"webapp",
		"custom",
		"elements",
		"web",
		"plugins",
		"lit-element",
		"component",
		"rollup",
		"lit-html",
		"template",
		"tslint",
		"typescript",
		"postcss",
		"browserslist",
		"scss",
		"minifying",
		"build",
		"tsconfig"
	],
	"license": "MIT",
	"scripts": {
		"b:dev": "rollup -c --environment NODE_ENV:dev",
		"b:prod": "rollup -c --environment NODE_ENV:prod",
		"s:dev": "rollup -c --watch --environment NODE_ENV:dev",
		"s:prod": "rollup -c --watch --environment NODE_ENV:prod",
		"s": "npm run s:dev",
		"ncu": "ncu -u -a && npm update && npm install",
		"b:lib": "node build.js",
		"bump:patch": "npm version patch && git add . && git commit --no-edit --amend --no-verify",
		"bump:minor": "npm version minor && git add . && git commit --no-edit --amend --no-verify",
		"bump:major": "npm version major && git add . && git commit --no-edit --amend --no-verify",
		"publish:dist": "cd dist && npm publish --access=public && cd ..",
		"publish:patch": "npm run bump:patch && git push && npm run b:lib && npm run publish:dist",
		"publish:minor": "npm run bump:minor && git push && npm run b:lib && npm run publish:dist",
		"publish:major": "npm run bump:major && git push && npm run b:lib && npm run publish:dist",
		"test": "npm run b:lib && karma start karma.conf.js"
	},
	"dependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.1",
		"@wessberg/rollup-plugin-ts": "^1.0.12",
		"autoprefixer": "^9.3.1",
		"babel-core": "^6.26.3",
		"chai": "^4.2.0",
		"colors": "^1.3.2",
		"cssnano": "^4.1.7",
		"escodegen": "^1.11.0",
		"esprima": "^4.0.1",
		"estraverse": "^4.2.0",
		"fs": "0.0.1-security",
		"fs-extra": "^7.0.0",
		"html-minifier": "^3.5.21",
		"karma": "^3.1.1",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-mocha": "^1.3.0",
		"karma-rollup-preprocessor": "^6.1.0",
		"livereload": "^0.7.0",
		"magic-string": "^0.25.1",
		"mocha": "^5.2.0",
		"node-sass": "^4.9.4",
		"path": "^0.12.7",
		"postcss": "^7.0.5",
		"precss": "^3.1.2",
		"recursive-readdir-sync": "^1.0.6",
		"rollup": "^0.66.6",
		"rollup-plugin-cleaner": "^0.2.0",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-filesize": "^5.0.1",
		"rollup-plugin-json": "^3.1.0",
		"rollup-plugin-license": "^0.7.0",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-progress": "^0.4.0",
		"rollup-plugin-serve": "^0.6.0",
		"rollup-plugin-terser": "^3.0.0",
		"rollup-plugin-visualizer": "^0.9.2",
		"rollup-pluginutils": "^2.3.3",
		"targz": "^1.0.1",
		"typescript": "^3.1.5",
		"workbox-build": "^3.6.3"
	},
	"devDependencies": {
		"@polymer/lit-element": "^0.6.2",
		"lit-html": "^0.12.0"
	}
}
