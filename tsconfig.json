{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": false,
		"newLine": "LF",
		"allowJs": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"alwaysStrict": false,
		"strictNullChecks": false,
		"lib": [
			"es2015.promise",
			"dom",
			"es6",
			"scripthost",
			"es7",
		  	"es2017",
			"es2017.object",
			"es2015.proxy"
		]
	},
	"exclude": [
		"../../node_modules"
	]
}